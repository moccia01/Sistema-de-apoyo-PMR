{{#partial "contenido" }}
    <div class="container-fluid d-flex align-items-center justify-content-center mt-5">
        <div class="col-md-4 mb-5">
            <div class="card shadow-lg">
                <div class="card-header text-dark text-center py-3">
                    {{#if user}}
                        <h3 class="m-0">Perfil</h3>
                    {{else}}
                        <h3 class="m-0">Registro de usuario</h3>
                    {{/if}}
                </div>
                <div class="card-body p-4">
                    <form method="POST" {{#if user}} action="/perfil" {{else}} action="/registro" {{/if}}>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombre" placeholder="Inserte su nombre" value="{{nombre}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="apellido" class="form-label">Apellido</label>
                            <input type="text" class="form-control" name="apellido" placeholder="Inserte su apellido" value="{{apellido}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="usuario_nombre" class="form-label">Nombre De Usuario</label>
                            <input type="text" class="form-control" name="usuario_nombre" placeholder="Inserte su nombre de usuario" value="{{usuario}}" required>
                        </div>
                        {{#if user}}
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" placeholder="Inserte su email" value="{{user.mail}}" required>
                            </div>
                            <div class="mb-3">
                                <label for="telefono" class="form-label">Número de Teléfono</label>
                                <input type="text" class="form-control" name="telefono" placeholder="Inserte su número de teléfono" value="{{user.telefono}}" required>
                            </div>
                        {{/if}}

                        <div class="mb-3">
                            <label for="contrasenia" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" name="contrasenia" placeholder="Inserte su contraseña" required>
                        </div>

                        {{#if user}}
                            <div class="mb-3">
                                <label for="medio_notificacion" class="form-label">Medio de Notificación</label>
                                <select class="form-select" name="medio_notificacion">
                                    <option value="-1">Elegir medio de notificacion</option>
                                    <option value="MensajeEmail">Email</option>
                                    <option value="MensajeWhatsapp">WhatsApp</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="tiempo_configuracion" class="form-label">Tiempo de Configuración</label>
                                <select class="form-select" name="tiempo_configuracion">
                                    <option value="-1">Elegir tiempo de notificacion</option>
                                    <option value="CuandoSucede">Cuando sucede</option>
                                    <option value="SinApuros">Sin apuros</option>
                                </select>
                            </div>
                        {{/if}}
                        <button type="submit" class="btn botonppal">Confirmar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/usuarios/plantilla_base }}
